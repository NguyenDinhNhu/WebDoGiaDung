
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Notification")

<section class="mt-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.6090180169545!2d105.81784827605433!3d21.008304188479325!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab7d51e06cc5%3A0xec5664bc38d39b34!2zMTAyIFAuIFRow6FpIFRo4buLbmgsIFRo4buLbmggUXVhbmcsIMSQ4buRbmcgxJBhLCBIw6AgTuG7mWksIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1686540936987!5m2!1svi!2s" width="100%" height="780" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="col-md-6">
                <div class="ml-2">
                    <h2 class="my-4">Liên hệ</h2>
                </div>
                <div class="my-3">
                    <small class="text-secondary">Địa chỉ của chúng tôi</small>
                    <strong class="d-block" style="font-size:14px; color:#252a2b">
                        102 Thái Thịnh, Phường Trung Liệt, Quận Đống Đa, Thành phố Hà Nội, Việt Nam
                    </strong>
                </div>
                <div class="my-3">
                    <small class="text-secondary">Email chúng tôi</small>
                    <strong class="d-block" style="font-size:14px; color:#252a2b">kaito19022002@gmail.com</strong>
                </div>
                <div class="my-3">
                    <small class="text-secondary">Điện thoại</small>
                    <strong class="d-block" style="font-size:14px; color:#252a2b">0326430345</strong>
                </div>
                <div class="my-3">
                    <small class="text-secondary">Thời gian làm việc</small>
                    <strong class="d-block" style="font-size:14px; color:#252a2b">
                        Tất cả các ngày trong tuần, từ 8h30
                        đến 17h30
                    </strong>
                </div>

                <h4 class="my-4">Gửi thắc mắc cho chúng tôi</h4>
                <form class="form-contact" method="POST" action="Home/SubmitContact">
                    <div class="form-group mb-4">
                        <input type="text" name="FullName" class="form-control rounded-0 py-4 bg-light" aria-describedby="emailHelp" placeholder="Tên của bạn" required="">
                    </div>
                    <div class="row mb-2 p-0">
                        <div class="form-group col-6">
                            <input type="email" name="Email" class="form-control rounded-0 py-4 bg-light" placeholder="Email của bạn" required="">
                        </div>
                        <div class="form-group col-6">
                            <input type="text" name="Phone" class="form-control rounded-0 py-4 bg-light" placeholder="Số điện thoại của bạn" required="" pattern="[0-9]{10,12}">
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <input type="text" name="Title" class="form-control rounded-0 py-4 bg-light" placeholder="Tiêu đề" required="">
                    </div>
                    <div class="form-group">
                        <textarea name="Detail" class="form-control rounded-0 bg-light pl-3" id="" rows="4" placeholder="Nội dung" required=""></textarea>
                    </div>

                    <button type="submit" class="btn btn-dark rounded-0 py-2 px-4 ">
                        <small>
                            GỬI CHO CHÚNG TÔI
                        </small>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

