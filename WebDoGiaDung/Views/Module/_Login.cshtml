@{
    Layout = null;
}

@if (Session["User_Name"] == null)
{

    <li class="d-flex align-items-center justify-content-center">
        <div><i class="fa-regular fa-user icon-top"></i></div>
        <ul class="mt-3" style="margin-left: 12px; margin-right: 20px;">
            <li class="font-weight-bold" style="margin-left: 6px;">Tài khoản</li>
            <li style="font-size: 13px;">
                <button type="button" class="btn-register" data-toggle="modal" data-target=".bd-example-modal-lg">
                    Đăng ký /
                </button>
                <button type="button" class="btn-login" data-toggle="modal"
                        data-target="#exampleModal">
                    Đăng nhập
                </button>
            </li>
        </ul>
    </li>
}
else
{
    <li class="d-flex align-items-center justify-content-center">
        <div><i class="fa-regular fa-user icon-top"></i></div>
        <div class="ml-2">
            <div class="font-weight-bold mt-3">Xin chào</div>
            <div class="dropdown">
                <div class="dropdown-toggle" type="button"
                     id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                     aria-expanded="false">
                    @Session["User_Name"]
                </div>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item border-bottom my-1" href="~/account/userprofile/@Session["User_ID"]">
                        <i class="fas fa-caret-right text-secondary"></i>&nbsp Thông tin
                    </a>
                    <a class="dropdown-item border-bottom my-1" href="~/account/order/@Session["User_ID"]">
                        <i class="fas fa-caret-right text-secondary"></i>&nbsp Đơn hàng
                    </a>
                    <a class="dropdown-item" href="~/account/userlogout?url=@(HttpContext.Current.Request.Url.AbsolutePath)">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </li>
}


<!-- Register -->
<div class="modal fade bd-example-modal-lg" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #e41b35; color: #fff;">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="fas fa-user-plus"></i>
                    Đăng ký
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: #fff">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3 row" method="POST">
                    <div class="col-md-6">
                        <div class="form-outline mb-4">
                            <label class="form-label" >Họ và tên</label>
                            <input type="text" class="form-control ten" placeholder="" value="" required
                                           name="ten" id="FullName"/>
                            <div class="invalid-feedback">
                                Tên người dùng không được để trống
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" >Địa chỉ</label>
                            <input type="text" class="form-control address" placeholder="" value="" required
                                           name="Address" id="Address" />
                            <div class="invalid-feedback">
                                Địa chỉ không được để trống
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control email" placeholder="" value="" required
                                           name="Email" id="Email" />
                            <div class="invalid-feedback">
                                Email không được để trống
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" >Số điện thoại</label>
                            <input type="number" class="form-control valiphone Phone" id="valiphone"
                                           placeholder="" required name="phone" />
                            <div class="invalid-feedback invalid-feedback-valiphone">
                                Số điện thoại đã được đăng ký
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-outline mb-4">
                            <label class="form-label" >Tên tài khoản</label>
                            <input type="text" class="form-control ten" placeholder="" value="" required
                                           name="ten" id="UserName"/>
                            <div class="invalid-feedback">
                                Tên truy cập không được để trống
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" >Mật khẩu</label>
                            <input type="password" class="form-control pass-res" placeholder="" required
                                           name="pass" id="Pass" />
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" >Xác nhận lại khẩu</label>
                            <input  type="password" class="form-control pl-2  repass-res" placeholder=""
                                           required name="repass" />
                            <div class="invalid-feedback">
                                <!--is-invalid-->
                                Mật khẩu không khớp. Hãy thử lại.
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-md-12" style="margin-bottom: 20px;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck3" required checked />
                            <label class="form-check-label" for="invalidCheck3">
                                Tôi đồng ý với các điều khoản và
                                dịch vụ
                            </label>
                        </div>
                    </div>
                    <button type="submit" id="btn-register" class="btn btn-danger btn-block mb-4 w-50" style="margin: auto;">
                        Đăng ký
                    </button>
                    <div class="col-md-12 text-center">
                        <p>
                            Bạn đã có tài khoản?
                            <button  data-toggle="modal" data-target="#exampleModal" class="dn-lg"
                                    style="text-decoration: underline; margin-left: 4px; border: 0; background-color: transparent;">
                                Đăng nhập
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Login -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #e41b35; color: #fff;">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="fas fa-sign-in-alt"></i>
                    Đăng nhập
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: #fff;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3 shop" method="POST">
                    <div class="form-outline mb-4">
                        <label class="form-label" >Email / Tài khoản</label>
                        <input type="text" class="form-control" aria-describedby="emailHelp"
                                       placeholder="" name="UserName" value=""/>
                        <small id="nameHelp" class="pl-1 form-text text-danger"></small>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" >Mật khẩu</label>
                        <input type="password" class="form-control" placeholder="" name="Password" value="" />
                        <small id="passHelp" class="pl-1 form-text text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <a href="#">Quên mật khẩu?</a>
                    </div>
                    <button type="submit" id="btn-login" class="btn btn-danger btn-block mb-4 w-50" style="margin: auto;">
                        Đăng nhập
                    </button>

                    <div class="text-center">
                        <p>
                            Bạn chưa có tài khoản?
                            @*<button data-toggle="modal" data-target=".bd-example-modal-lg" class="dk-lg"
                                    style="text-decoration: underline; margin-left: 4px; border: 0; background-color: transparent;">
                                Đăng ký
                            </button>*@
                            <button data-toggle="modal" data-target=".bd-example-modal-lg" class="dk-lg" type="button"
                                    style="text-decoration: underline; margin-left: 4px; border: 0; background-color: transparent;" >
                                Đăng ký
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
